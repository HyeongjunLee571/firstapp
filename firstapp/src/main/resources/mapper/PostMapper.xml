<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zuun.studying.firstapp.mapper.PostMapper">

    <resultMap id="PostResultMap" type="zuun.studying.firstapp.Dto.PostDto">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="username" column="username"/>

        <collection property="files" ofType="zuun.studying.firstapp.Dto.FileDto" select="selectFilesByPostId" column="id"/>
    </resultMap>

    <resultMap id="PostWithUserFilesMap" type="zuun.studying.firstapp.Dto.PostDetailDto">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="likes" column="likes"/>
        <result property="createdAt" column="created_at"/>
        <result property="updateAt" column="update_at"/>

        <association property="user" javaType="zuun.studying.firstapp.Dto.UserResponseDto">
            <id property="id" column="user_id"/>
            <result property="username" column="username"/>
            <result property="email" column="email"/>
        </association>

        <collection property="files" ofType="zuun.studying.firstapp.Dto.FileDto">
            <id property="id" column="id"/>
            <result property="storedName" column="stored_name" />
            <result property="filePath" column="file_path"/>
            <result property="fileType" column="file_type"/>
            <result property="postId" column="post_id"/>
        </collection>
    </resultMap>

    <select id="findPostWithUserFiles" parameterType="long" resultMap="PostWithUserFilesMap">
        SELECT p.id, p.title, p.content, p.likes, p.created_at,
               u.id AS user_id, u.username AS username,
               u.email AS email,f.id,f.stored_name,f.file_path,f.file_type,f.post_id
        FROM posts p
                 JOIN users u ON p.user_id = u.id
                 LEFT JOIN files f ON p.id = f.post_id
        WHERE p.id = #{id}
    </select>

    <select id="selectAllPosts" parameterType="map" resultMap="PostResultMap">
        SELECT p.id, p.title, p.content,p.user_id AS userId,p.created_at,u.username AS author
        FROM posts p
                 JOIN users u ON p.user_id = u.id
        ORDER BY p.created_at DESC
            LIMIT #{limit} OFFSET #{offset}
    </select>

    <insert id="insertPost" parameterType="zuun.studying.firstapp.entity.Post" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO posts(title, content, user_id, likes,created_at)
        VALUES(#{title},#{content},#{userId},0,NOW())
    </insert>

    <update id="updatePost" parameterType="zuun.studying.firstapp.entity.Post">
        UPDATE posts
        SET title=#{title}, content=#{content}
        WHERE id=#{id}
    </update>

    <update id="updatePostLikes" parameterType="long">
        UPDATE posts
        SET likes = likes + 1
        WHERE id = #{id}
    </update>

    <delete id="deletePost" parameterType="long">
        DELETE FROM posts WHERE id = #{id}
    </delete>

    <select id="selectFilesByPostId" parameterType="long" resultType="zuun.studying.firstapp.Dto.FileDto">
        SELECT id,file_path, file_type
        FROM files
        WHERE post_id = #{postId}
    </select>

    <select id="countAllPosts" resultType="long">
        SELECT COUNT(*) FROM posts
    </select>
</mapper>